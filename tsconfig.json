{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "."
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "client",
        "dist"
    ]
}