{
    "name": "node-play",
    "version": "1.0.0",
    "description": "Hub de jeux multijoueur avec Skyjo",
    "type": "module",
    "scripts": {
        "dev": "set PORT=3001 && concurrently \"npm run server:dev\" \"npm run client:dev\"",
        "server:dev": "tsx watch server/index.ts",
        "client:dev": "cd client && ng serve --host 0.0.0.0 --port 4200",
        "build:client": "cd client && ng build",
        "build:server": "tsc -p tsconfig.json",
        "build": "npm run build:client && npm run build:server",
        "start": "node dist/server/index.js",
        "prod": "npm run build && npm run start",
        "stable": "node dist/server/index.js"
    },
    "dependencies": {
        "express": "^4.21.0",
        "socket.io": "^4.8.0",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/cors": "^2.8.17",
        "@types/node": "^22.0.0",
        "concurrently": "^9.0.0",
        "tsx": "^4.19.0",
        "typescript": "^5.6.0"
    }
}